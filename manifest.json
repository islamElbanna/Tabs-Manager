{
  "name": "Tabs Manager",
  "version": "0.99",
  "description": "Manage your tabs with their thumbnails to have a quick access",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "persistent": true,
    "scripts": ["/js/lib/lunr.min.js", "/js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/js/full-content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "/img/icon.png",
    "default_title": "Tabs Manager",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "icons": { "16": "/img/icon.png",
           "48": "/img/icon.png",
          "128": "/img/icon.png" },
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Open Tabs manager on search mode"
    }
  }
}
